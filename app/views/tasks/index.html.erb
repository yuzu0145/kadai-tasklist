<h1>タスク一覧</h1>

<% if @tasks.any? %>
    <table class="table table-striped">
        <thead>
            <th>id</th>
            <th>ステータスタスク</th>
            <th>タスク</th>
        </thead>
        <tbody>
        <% @tasks.each do |task| %>
            <tr>
                <td><%= link_to task.id,task %> </td>
                <td><%=task.status %></td>
                <td><%= task.content %></td>
            </tr>
        <% end %>
        </tbody>
        </table>
    <div>
        <%= paginate @tasks %>
    </div>
    <% end %>

<%= link_to '新規タスクの保存',new_task_path, class: "btn btn-primary"  %>